<!DOCTYPE html>
<!--[if lt IE 7 ]><html class="ie ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]><html class="ie ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]><html class="ie ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--><html lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">
	<meta name="keywords" content="">

	<title>Improve-Me</title>

	<link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon" />

	<link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.3.0/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="css/animate.css">
  <link rel="stylesheet" type="text/css" href="css/menu.css">
	<link rel="stylesheet" type="text/css" href="style.css">
	<link rel="stylesheet" type="text/css" href="css/custom.css">

  <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>
<body>
  <div id="loader">
    <div class="loader-container">
      <img src="images/site.gif" alt="" class="loader-site">
    </div>
  </div>

	<div id="wrapper">
		<div class="topbar">
      <div class="container">
        <div class="row">
          <div class="col-md-6 text-left">
            <p><i class="fa fa-book"></i> Портал для самосовершенствования.</p>
					</div>

          <div class="col-md-6 text-right">
						<ul class="list-inline">
              <li class="dropdown">
                {{? it.authorized }}
                  <a href="/logout"><i class="fa fa-lock"></i> Выйти</a>
                {{??}}
                  <a class="dropdown-toggle" href="#" data-toggle="dropdown"><i class="fa fa-lock"></i> Войти</a>
                  <div class="dropdown-menu" {{? it.loginErr }}style="display:block"{{?}}>
                    <form method="post" action="/api/signin">
                      <div class="form-title">
                        <h4>Авторизация</h4>
                        <hr>
                      </div>
                      {{? it.loginErr }}
                        <span class="error">Неверный логин или пароль</span>
                      {{?}}
                      <input class="form-control" type="text" name="login" placeholder="Имя Пользователя">
                      <div class="formpassword">
                        <input class="form-control" type="password" name="password" placeholder="******">
                      </div>
                      <div class="clearfix"></div>
                      <button type="submit" class="btn btn-block btn-primary">Войти</button>
                      <hr>
                      <h4><a href="/signup">Создать аккаунт</a></h4>
                    </form>
                  </div>
                {{?}}
              </li>
            </ul>
					</div>
				</div>
      </div>
		</div>

		<header class="header">
      <div class="container">
        <div class="hovermenu ttmenu">
          <div class="navbar navbar-default" role="navigation">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="fa fa-bars"></span>
              </button>
              <div class="logo">
                <a class="navbar-brand" href="/"><img src="images/logo.png" alt=""></a>
              </div>
            </div>

            <div class="navbar-collapse collapse">
              <ul class="nav navbar-nav">
                <li><a href="/">Главная</a></li>
                <li class="dropdown ttmenu-half">
                  <a href="#" data-toggle="dropdown" class="dropdown-toggle">Категории <b class="fa fa-angle-down"></b></a>
                  <ul class="dropdown-menu">
                    <li>
                      <div class="ttmenu-content">
                        <div class="row">
                          <div class="col-md-6">
                            <div class="box">
                              <ul>
                                <li><a href="/category/1">Самооценка</a></li>
                                <li><a href="/category/2">Уверенность</a></li>
                                <li><a href="/category/3">Прокрастинация</a></li>
                              </ul>
                            </div>
                          </div>
                        </div>
                      </div>
                    </li>
                  </ul>
                </li>
                <li><a href="/tests">Тесты</a></li>
              </ul>
              {{? it.authorized === false }}
                <ul class="nav navbar-nav navbar-right">
                  <li><a class="btn btn-primary" href="/signup"><i class="fa fa-sign-in"></i> Создать Аккаунт</a></li>
                </ul>
              {{?}}
            </div>
          </div>
        </div>
      </div>
		</header>

    {{? it.authorized === false || it.registeringStep !== 'BASE_TESTS' }}
      <section class="section darkskin fullscreen paralbackground parallax" style="background-image:url('images/zvezdnaya-noch.jpg');" data-img-width="1627" data-img-height="868" data-diff="100">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="section-title text-center">
                <h4>Регистрируйся</h4>
                <p>Мы найдём то, что тебе интересно</p>
              </div>
            </div>
          </div>

          <div class="row service-center">
            <div class="col-md-4 col-sm-6">
              <div class="feature-list">
                <i class="fa fa-graduation-cap"></i>
                <p><strong>Пройти базовые тесты</strong></p>
                <p>У нас есть много тестов, которые мы тщательно обрабатываем и результаты сохраняются на вашем аккаунте</p>
              </div>
            </div>

            <div class="col-md-4 col-sm-6">
              <div class="feature-list">
                <i class="fa fa-shopping-cart"></i>
                <p><strong>Прочитать статьи</strong></p>
                <p>Основываясь на результатах тестов мы подберем нужные статьи</p>
              </div>
            </div>

            <div class="col-md-4 col-sm-6">
              <div class="feature-list">
                <i class="fa fa-question"></i>
                <p><strong>Самосовершенствоваться</strong></p>
                <p>Вы многое сможете взять на заметку :)</p>
              </div>
            </div>
          </div>

          <div class="row button-wrapper">
            <div class="col-md-12">
              <div class="text-center">
                {{? it.authorized === false }}
                  <a href="/signup" class="btn btn-default">Начать!</a>
                {{??}}
                  <a href="/tests" class="btn btn-default">Пройти базовые тесты</a>
                {{?}}
              </div>
            </div>
          </div>
        </div>
      </section>
    {{?}}

    <section class="grey section">
      <div class="container">
        <div class="row">
          <div id="content" class="col-md-12 col-sm-12 col-xs-12">
            {{~ it.feed:record }}
              <div class="blog-wrapper">
                <div class="blog-title">
                  <a class="category_title" href="/category/{{= record.categoryId }}">{{= record.category}}</a>
                  <h2><a href="/post/{{= record.id}}">{{= record.title}}</a></h2>
                </div>
                {{? record.imageUrl }}
                  <div class="blog-image">
                    <a href="/post/{{= record.id}}">
                      <img src="{{= record.imageUrl}}" alt="{{= record.title}}">
                    </a>
                  </div>
                {{?}}
                <div class="blog-desc">
                  <p>{{= record.shortcut}}</p>
                  <a href="/post/{{= record.id}}" class="readmore">Показать продолжение...</a>
                </div>
              </div>
            {{~}}

            {{? it.pages > 1 }}
              <hr class="invis">
              <nav class="text-center">
                <ul class="pagination">
                  {{? it.currentPage !== 1 }}
                    <li>
                      <a href="/?page=1" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                      </a>
                    </li>
                  {{?}}
                  {{ for (var i = 1; i <= it.pages; i++) { }}
                    <li><a href="/?page={{= i}}" {{? i === it.currentPage }}class="active"{{?}}>{{= i }}</a></li>
                  {{ } }}
                  {{? it.currentPage !== it.pages }}
                    <li>
                      <a href="/?page={{= it.pages }}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                      </a>
                    </li>
                  {{?}}
                </ul>
              </nav>
            {{?}}
          </div>
        </div>
      </div>
    </section>


    <section class="copyright">
      <div class="container">
        <div class="row">
          <div class="col-md-6 text-left">
            <p>© 2015 <a href="#">Polina Rudenko</a></p>
          </div>
        </div>
      </div>
    </section>
	</div>

	<script src="js/jquery.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/retina.js"></script>
  <script src="js/wow.js"></script>
  
	<script src="js/custom.js"></script>
</body>
</html>
