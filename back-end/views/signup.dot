<body class="login parallax" style="background-image:url('/images/zvezdnaya-noch.jpg')">

  <div id="loader">
    <div class="loader-container">
      <img src="/images/site.gif" alt="" class="loader-site">
    </div>
  </div>
    
	<div id="wrapper">
    <div class="container">
      <div class="row login-wrapper">
        <div class="col-md-6 col-md-offset-3">
          <div class="logo logo-center">
            <a href="/"><img src="/images/login-logo.png" alt=""></a>
          </div>
          <div class="panel panel-login">
            <div class="panel-heading">
              <div class="row">
                <div class="col-xs-6">
                  <a href="/signin">Вход</a>
                </div>
                <div class="col-xs-6">
                  <a href="/signup" class="active">Регистрация</a>
                </div>
              </div>
              <hr>
              </div>
              <div class="panel-body">
                <div class="row">
                  <div class="col-lg-12">
                    <form id="register-form" action="/api/signup" method="post" role="form">
                      <div class="form-group">
                        <input type="text" name="login" tabindex="1" class="form-control" placeholder="Логин" value="" pattern="^.{3,64}$" required>
                      </div>
                      <div class="form-group">
                        <input type="password" name="password" tabindex="2" class="form-control" placeholder="Пароль" pattern="^.{3,64}$" required>
                      </div>
                      <div class="form-group">
                        <select name="sex" tabindex="3" class="form-control" required>
                          <option value="" disabled selected hidden>Пол</option>
                          <option value="MALE">Мужской</option>
                          <option value="FEMALE">Женский</option>
                        </select>
                      </div>
                      <div class="form-group">
                        <input type="number" name="year" tabindex="4" class="form-control" placeholder="Год рождения" value="" min="1900" required>
                      </div>
                      {{? it.errorMsg }}
                        <div class="alert alert-danger" role="alert">
                          <strong>Ошибка:</strong>
                          {{= it.errorMsg }}
                        </div>
                      {{?}}
                      <div class="form-group">
                        <div class="row">
                          <div class="col-sm-12">
                            <button type="submit" class="form-control btn btn-default btn-block">Создать аккаунт</button>
                          </div>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>
	</div>

	<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
	<script src="js/retina.js"></script>
  <script src="js/wow.js"></script>
	<script src="js/custom.js"></script>
</body>
