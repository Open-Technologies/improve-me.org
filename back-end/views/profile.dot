{{#def.include('includes/header')}}
<section class="grey page-title">
  <div class="container">
    <div class="row">
      <div class="col-md-6 text-left">
        <h1>Редактирование профиля</h1>
      </div>
      <div class="col-md-6 text-right">
        <div class="bread">
          <ol class="breadcrumb">
            <li><a href="/">Главная</a></li>
            <li class="active">Редактирование профиля</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="white content section">
  <div class="container">
    <div class="row">
      <div id="course-content" class="col-md-12">
        <div class="course-description">
          <div class="edit-profile">
            <form role="form">
              <div class="form-group">
                <label>Логин</label>
                <input type="text" class="form-control" disabled>
              </div>
              <div class="form-group">
                <label>Старый пароль</label>
                <input type="password" name="current-password" class="form-control" placeholder="************">
              </div>
              <div class="form-group">
                <label>Новый пароль</label>
                <input type="password" name="new-password" class="form-control">
              </div>
              <div class="form-group">
                <label>Пол</label>
                <select name="sex" class="form-control" required>
                  <option value="" disabled selected hidden>Пол</option>
                  <option value="MALE">Мужской</option>
                  <option value="FEMALE">Женский</option>
                </select>
              </div>
              <div class="form-group">
                <label>Год Рождения</label>
                <input type="number" name="year" class="form-control" placeholder="Год рождения" value="" min="1900" required>
              </div>
              <button type="submit" class="btn btn-primary">Сохранить</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{{#def.include('includes/footer')}}
